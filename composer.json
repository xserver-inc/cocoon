{
    "name": "cocoon/cocoon-master",
    "description": "Cocoon WordPress Theme - Unit Tests",
    "type": "wordpress-theme",
    "license": "GPL-2.0-or-later",
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6"
    },
    "autoload-dev": {
        "psr-4": {
            "Cocoon\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite unit",
        "test:integration": "phpunit --testsuite integration",
        "test:coverage": "phpunit --testsuite unit --coverage-html tests/coverage --coverage-text",
        "test:coverage-clover": "phpunit --testsuite unit --coverage-clover tests/coverage/clover.xml --coverage-text"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
